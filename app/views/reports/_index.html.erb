<div class='col-md-8 offset-md-1'>
    <h2 style="background-color:#DDDDDD	; text-align: center;">Report</h2>
     <table class="table table-striped">
      <thead>
      　<tr>
            <th>日付</th>
            <th>学習時間</th>
            <th>内容</th>
      　</tr>
      </thead>
    　<tbody>
　　　　<% reports.each do |report| %>
      　<tr>
        　<td><font color="#33CCFF"><%= report.date %></font></td>
        　<td><font color="#33CCFF"><%= report.time %></font></td>
        　<td><%= link_to report.body, report_path(report), class: "report_#{report.id}"%></td>
        　<td><span class="sentiment-score">本文の感情分析スコア<%= report.score %></span></td>
        　<td><%= link_to "#{report.report_comments.count} コメント", report_path(report.id) %></td>
       　 <td class="favorite-btn">いいね<%= render "favorites/favorites", report: report %></td>
      　</tr>
    　 <% end %>
    　</tbody>
    </table>