<%= form_with model:report,local:true do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control report_title' %>
  </div>
  <div class="form-group">
    <%= f.label :opinion %>
    <%= f.text_area :body, class: 'form-control report_body' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-dark' %>
  </div>
<% end %>